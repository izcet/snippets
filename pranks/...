#!/bin/sh

RED='\033[0;31m'
ORA='\033[0;33m'
#YEL='\033[1;33m'
GRE='\033[0;32m'
CYA='\033[0;36m'
BLU='\033[0;34m'
PUR='\033[0;35m'
NOC='\033[0m'
VAR=2
SVAR=2
while [ 1 ] ; do
	sleep $VAR
echo "$ORA\c"
sleep $SVAR
#echo "$YEL\c"
#sleep $SVAR
echo "$GRE\c"
sleep $SVAR
echo "$CYA\c"
sleep $SVAR
echo "$BLU\c"
sleep $SVAR
echo "$PUR\c"
sleep $SVAR
echo "$RED\c"
sleep $SVAR

echo "$NOC\c"
done
